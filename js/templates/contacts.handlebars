<div class="row">
   <div class="col-sm-12">
      <a class="btn btn-default" href="#contacts/addcontact" role="button">Add Contacts</a> 
      <p>&nbsp;</p>  
      <table class="table table-striped table-hover table-condensed" id="tbl1">
         <thead>
            <tr>
               <th>Index</th>
               <th>Name</th>
               <th>Phone</th>
               <th>Email</th>
               <th>Added</th>
               <th>Delete</th>
            </tr>
         </thead>
         <tbody>
{{#each contacts}}
            <tr>
               <td class='index-column'>{{ id }}</td>
               <td><a href="#contacts/view/{{id}}">{{name}}</a></td>
               <td>{{ mobileno }}</td>
               <td>{{ email }}</td>
               <td><span class="label label-primary">{{ addeddate }}</span></td>
               <td>
                  <a href="javascript:;">
                     <span class="glyphicon glyphicon-trash" aria-hidden="true" data-contactid="{{ id }}"></span>
         {{/each}} 
         </tbody>
      </table>
   </div>
</div>